@model IEnumerable<ElizabethLibrary.Models.AuthorViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Authors";
}
<div class="page-header">
    <h2>Authors</h2>
</div>
    <br />
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Books</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Books", "Details", new { id = item.AuthorId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
<p>
    @Html.ActionLink("Back to List of Authors", "Authors")
</p>




